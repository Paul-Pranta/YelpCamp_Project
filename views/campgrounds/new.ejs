<% layout('layouts/boilerplate') %>
<div class="row">

    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">

            <div class="mb-3">
    
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">looks perfect!!!</div>
    
            </div>
    
            <div class="mb-3">
    
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">looks perfect!!!</div>
    
            </div>

            <div class="mb-3">

                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Upload Images</label>
                </div>

            <div class="mb-3">
                <label for="price" class="form-label">Campground Price:</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" name="campground[price]" id="price" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">looks perfect!!!</div>
                </div>
            </div>

            <div class="mb-3">
    
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">looks perfect!!!</div>
    
            </div>

            <div class="mb-3">

                <button class="btn btn-success">Add Campground</button>

            </div>
    
        </form>
        <a href="/campgrounds">All Campground</a>
    
    </div>
</div>


    